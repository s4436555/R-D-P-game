<resources>
    <!-- Game -->
    <style name="GameTheme" parent="android:Theme.Holo">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="android:actionBarStyle">@style/MyGameActionBar</item>
    </style>

    <style name="MyGameActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/blue_bar</item>
        <item name="android:height">48dp</item>
    </style>

    <!-- MainMenu -->
    <style name="MainMenuTheme" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/MainMenuActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="MainMenuActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:height">70dp</item>
        <item name="android:icon">@color/blue_bar</item>
        <item name="android:background">@color/blue_bar</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
    </style>

    <style name="TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/bar_text</item>
        <item name="android:textColor">@color/blue_bar_text</item>
    </style>
</resources>
