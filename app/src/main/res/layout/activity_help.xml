<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#eee"
    tools:context="free.lunch.aDventure.HelpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="gotoCredits"
                android:rowCount="2"
                android:columnCount="2"
                android:id="@+id/credits_button">
                <ImageView
                    android:layout_width="@dimen/menu_icon"
                    android:layout_height="@dimen/menu_icon"
                    android:layout_margin="@dimen/menu_margin"
                    android:layout_rowSpan="2"
                    android:src="@drawable/ppl_ic"/>
                <TextView
                    android:layout_margin="@dimen/menu_margin"
                    android:textSize="@dimen/menu_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:text="WIP"/>
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_margin="@dimen/menu_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:text="I'm on it"/>
            </GridLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
