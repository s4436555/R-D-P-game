<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    android:backgroundTint="@color/game_bg_tint"
    android:backgroundTintMode="multiply"
    tools:context="tk.slicesofcheese.the_best_application_ever.GameActivity">

    <TextView
        android:id="@+id/touchView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/game_bar_height" />

    <tk.slicesofcheese.the_best_application_ever.View.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/game_bar_height" />

    <tk.slicesofcheese.the_best_application_ever.View.TouchOverlay
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/touchOverlay"
        android:layout_marginTop="@dimen/game_bar_height" />

</RelativeLayout>
